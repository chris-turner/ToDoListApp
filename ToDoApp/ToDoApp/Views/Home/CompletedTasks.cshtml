@{
    ViewData["Title"] = "Completed Tasks";
}
@model ToDoApp.Models.ToDoList

<div class="text-center">
    <h3 class="display-4">ToDoList - Completed Tasks</h3>
</div>

@foreach (var task in Model.toDoTasks)
{
<div class="todotask row">
    <div class="col-lg-2 col-md-2">
        @task.TaskDescription
    </div>

    <div class="col-lg-2 col-md-2">
        @if (task.TaskImageName != "")
        {
            <a href="~/@task.TaskImageName"><img class="image" src="~/@task.TaskImageName" /></a>
        }
    </div>

    @using (Html.BeginForm("updateTaskStatusPending", "Home", FormMethod.Post, new { @class = "todobtn" }))
    {

        <input class="hidden" value="@task.TaskID" name="taskID" id="taskID" />
        <input type="submit" value="↻" class="btn-sm btn-primary" />
    }
    @using (Html.BeginForm("DeleteTaskComplete", "Home", FormMethod.Post, new { @class = "todobtn" }))
    {

        <input class="hidden" value="@task.TaskID" name="taskID" id="taskID" />
        <input type="submit" value="X" class="btn-sm btn-danger" />
    }
</div>
}


